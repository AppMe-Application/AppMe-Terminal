<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Style for text in ListViews or RecyclerViews -->
    <style name="TextPrimary"  parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextMedium"  parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextSmall"  parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Style for Headers & Dividers -->
    <style name="TextHeader"  parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="VerticalDivider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/divider</item>
    </style>

    <!-- style the overflow menu -->
    <style name="AppTheme.PopupMenu" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@color/windowBackground</item>
        <item name="android:textColor">@color/md_blue_A700</item>    
    </style>

    <style name="apps_elementTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/apps_text_color</item>
        <item name="android:textSize">@dimen/apps_item_text_size</item>
    </style>

    <style name="apps_groupTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/apps_item_text_color</item>
        <item name="android:textSize">@dimen/apps_group_item_text_size</item>
    </style>
</resources>
